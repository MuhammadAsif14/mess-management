<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Modify and add UI components as needed for dinner details -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner Details"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Example TextViews for displaying dinner details -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dinnertitle"

        android:text="Title: Your Dinner Title"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dinnerdescription"

        android:text="Description: Your Dinner Description"
        android:textSize="16sp"/>

</LinearLayout>

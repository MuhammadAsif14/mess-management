<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnViewStudentDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Students"
        android:onClick="viewStudentDetails"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Menu"
        android:onClick="viewMenu"
        android:layout_below="@id/btnViewStudentDetails"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
